<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemKhoaActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="THÊM KHOA"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtMaKhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:padding="8dp"
        android:hint="Nhập mã khoa"
        android:inputType="number"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtTenKhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="8dp"
        android:hint="Nhập tên khoa"
        android:inputType="textPersonName"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txvMaKhoa_ThemKhoa"
        tools:layout_editor_absoluteX="33dp" />

    <Button
        android:id="@+id/btnUpdate_ThemKhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="btnInsert_ThemKhoa_Clicked"
        android:text="Thêm khoa"
        app:layout_constraintEnd_toStartOf="@+id/btnBack_ThemKhoa"
        app:layout_constraintTop_toBottomOf="@+id/txvTenKhoa_ThemKhoa" />

    <Button
        android:id="@+id/btnBack_ThemKhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="btnBack_ThemKhoa_Clicked"
        android:text="Quay lại"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTenKhoa_ThemKhoa" />

    <TextView
        android:id="@+id/txvMaKhoa_ThemKhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/red"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMaKhoa" />

    <TextView
        android:id="@+id/txvTenKhoa_ThemKhoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTenKhoa" />
</androidx.constraintlayout.widget.ConstraintLayout>